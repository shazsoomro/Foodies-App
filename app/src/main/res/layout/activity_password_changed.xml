<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordChangedActivity"
    android:background="@drawable/log_in"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/successmark"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Changed!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your password has been changed\nsuccessfully."
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#555555"/>

    <Button
        android:id="@+id/lgnBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Login"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:backgroundTint="#E02027"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"/>

</LinearLayout>