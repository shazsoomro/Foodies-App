<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewPassword"
    android:background="@drawable/log_in"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:src="@drawable/logokababking"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Password"
        android:paddingTop="40dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter email address and a link to reset your password will be sent to you."
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#555555"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="#222222"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        android:hint="Enter Password"
        android:textColorHint="#A9A9A9"
        android:textSize="12sp"
        android:padding="15dp"
        android:drawablePadding="8dp"
        android:drawableTint="#A9A9A9"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contuinue"
        android:layout_marginTop="30dp"
        android:backgroundTint="#E02027"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"/>

</LinearLayout>